
<div class="container"><h1>Dashboard</h1></div>
<h1>Articles You Posted</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Recruiting</th>
      <th>Skills</th>
      <th>Employability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    	<% if current_user.id == article.owner_id %>
	      <tr>
	        <td><%= article.title %></td>
	        <td><%= article.description %></td>
	        <td><%= article.recruiting %></td>
	        <td><%= article.skills %></td>
	        <td><%= article.employability %></td>
	        <td><%= link_to 'Show', article %></td>
	      </tr>
    	<%end%>
    <% end %>
  </tbody>
</table>

<h1>Articles for you Applied</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Recruiting</th>
      <th>Skills</th>
      <th>Employability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agreements.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
          <td><%= article.recruiting %></td>
          <td><%= article.skills %></td>
          <td><%= article.employability %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Cancel',cancel_agreement_article_path(article.id) %></td>

        </tr>
    <% end %>
  </tbody>
</table>

<h1>Invitation Receieved</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>User Name</th>
      <th>created_at</th>
      <th>Reject</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <% if current_user.id == article.owner_id %>
        
           
          <% article.find_users(article).each do |user| %>
            <tr>
            <td><%= article.title %></td>
            <td><%=user.username%></td>
            <td><%= article.agreement_date article,user %></td>
            <% @agr=Agreement.find_by(article_id:article.id,user_id:user.id)%>
            <td><%= link_to 'Reject',reject_agreement_article_path(@agr.id) %></td>
            
                        
            </tr>

          <%end%> 
          
      <%end%>
    <% end %>
  </tbody>
</table>

</table>