<div class="container"><h1>Dashboard</h1></div>
<h1>Articles You Posted</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <% if current_user.id == article.owner_id %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Delete',delete_article_article_path(article.id) %></td>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
