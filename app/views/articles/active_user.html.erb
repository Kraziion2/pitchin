
<h1>Active User Detail</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>User Name</th>
      <th>created_at</th>
      <th>Cancel</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @approvals.each do |approval| %>    
          <% if current_user.id == Article.find(approval.article_id).owner_id %> 
            <tr>
            <td><%= Article.find(approval.article_id).title %></td>
            <td><%= User.find(approval.user_id).username%></td>
            <td><%= approval.created_at %></td>
            <td><%= link_to 'Cancel Approval' ,cancel_approval_article_path(approval.id) %></td>
            <td><%= link_to 'Profile' ,invitation_user_article_path(approval.user_id),target:"_blank"%></td>
            </tr>
         <%end%>
    <% end %>
  </tbody>
</table>
