<p id="notice"><%= notice %></p>
 <div class="row" style="margin-top: 2%;margin-bottom: 2%">
      <div class="dropdown" >
        <div class="col-md-4">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Categories<span class="caret"></span></button>
          <ul class="dropdown-menu">
            <% @categories.each do |c| %>
              <li><%= link_to c.name ,c %></li>
            <%end%>
          </ul>
        </div>
      </div>
     </div> 
<h1>Articles</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <% if user_signed_in? %>
       <th>Distance</th>
      <%end%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <% if user_signed_in? %>
    <% unless current_user.id == article.owner_id%>
      <% if !current_user.agreement_found(article.id) && !current_user.approval_found(article.id) %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
          <td><%= @profile.distance_to(article).round(2) %>miles</td>
          <td><%= link_to 'Show', article %></td>
        </tr>
      <%end%>  
    <%end%> 
    <%else%>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article %></td>
    </tr>
    <%end%>
    <% end %>
  </tbody>
</table>
<div class="container">
<%= paginate @articles %>
</div>

