<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @article.description %>
  </p>

  <p>
    <strong>Recruiting:</strong>
    <%= @article.recruiting %>
  </p>

  <p>
    <strong>Skills:</strong>
    <%= @article.skills %>
  </p>

  <p>
    <strong>Employability:</strong>
    <%= @article.employability %>
  </p>
  <% if  user_signed_in? && current_user.id != @article.owner_id  %>
  <p>
    <strong>Distance:</strong>
    <%= @profile.distance_to(@article).round(2) %> miles
  </p>
  <%end%>
  <% if user_signed_in? &&  current_user.id == @article.owner_id %>
    <%= link_to 'Edit', edit_article_path(@article) %> |
  <%end%>
  <% if user_signed_in?%>
      <td><%= link_to 'Apply', agreement_article_path(@article) %></td>
  <%end%>      
  <%= link_to 'Back', articles_path %>
</div>